.brand-mission {
  position: relative;
  background-color: #01447d;
  color: #fff;
  padding-top: 3rem;
  padding-bottom: 5rem; }
  .brand-mission p {
    color: #fff; }
  @media (min-width: 48em) {
    .brand-mission {
      padding-bottom: 3rem; } }

.hero__inner p {
  color: #fff;
  font-weight: normal; }

.hero__revolt-logo {
  width: 100%;
  margin-bottom: 1rem; }
  @media (min-width: 48em) {
    .hero__revolt-logo {
      margin: auto;
      margin-bottom: 0;
      width: 63vw; } }

.hero__body {
  padding-left: 22px;
  padding-right: 22px; }
  @media (min-width: 36em) {
    .hero__body {
      padding-left: 10vw;
      padding-right: 10vw; } }
  @media (min-width: 36em) {
    .hero__body .hero__content-container {
      display: flex;
      justify-content: flex-end; }
      .hero__body .hero__content-container .hero__content {
        max-width: 300px;
        display: flex;
        flex-direction: column; } }

.hero__featured_product_image {
  width: 100%;
  pointer-events: none;
  transform: scale(2) translate(25%, -15%); }
  @media (min-width: 36em) {
    .hero__featured_product_image {
      max-width: 500px;
      transform: scale(1.3) translate(0, -8%); } }

.pre-order-cta {
  width: 8rem;
  font-size: 1rem;
  border-radius: 2.5rem;
  text-align: center;
  background-color: {{ settings.color_button }};
  padding: 0.2rem;
  color: #fff;
  font-weight: 700;
  display: inline-block; }
  @media (min-width: 36em) {
    .pre-order-cta {
      width: 13rem;
      font-size: 1.7rem; } }
  .pre-order-cta .pre-order-cta__line1 {
    font-size: 1em;
    line-height: 0.8em; }
  .pre-order-cta .pre-order-cta__line2 {
    font-size: 2em;
    line-height: 1em; }
  .pre-order-cta:focus {
    outline: none; }
  .pre-order-cta:hover {
    text-decoration: none;
    color: #fff; }

.revolt-team .team__title {
  line-height: 1; }
.revolt-team .member {
  margin-bottom: 1rem;
  min-height: 5rem; }
  .revolt-team .member .member__name {
    margin-bottom: 0;
    font-size: 1.5em;
    line-height: 1.8rem; }
  .revolt-team .member .member__nickname {
    font-size: 1.1em;
    color: #2a7370; }
  .revolt-team .member .member__nickname, .revolt-team .member .member__role {
    margin-bottom: 0; }
.revolt-team .ribbon {
  position: absolute;
  opacity: 0.9;
  width: 30%; }
  @media (min-width: 48em) {
    .revolt-team .ribbon {
      width: 15%; } }
  .revolt-team .ribbon.ribbon--blue {
    bottom: 0;
    right: 0;
    transform: translate(25%, 25%); }
  .revolt-team .ribbon.ribbon--red {
    top: 0;
    left: 0;
    transform: translate(-25%, -25%); }
.revolt-team .underlayer-image {
  position: absolute;
  z-index: -1;
  top: -10%;
  height: 90%;
  transform: translate(-50%, 0); }

.footer {
  background-size: cover; }

.site-footer__newsletter {
  margin: 50px auto 50px; }
  @media (min-width: 46.875em) {
    .site-footer__newsletter {
      margin: 55px 0 55px; } }

.out-of-stock-modal {
  position: absolute;
  background-color: whitesmoke;
  background-size: cover;
  box-shadow: -3px 7px 7px 0px #0000003b;
  padding: 2rem;
  color: #fff;
  left: 3rem;
  right: 3rem;
  top: -100vh;
  transition: top .3s; }
  .out-of-stock-modal p {
    color: #fff; }
  @media (min-width: 36em) {
    .out-of-stock-modal {
      left: 30%;
      top: 15%;
      right: 30%; } }
  .out-of-stock-modal__close-button {
    border-radius: 50%;
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%, -50%);
    cursor: pointer;
    width: 4rem;
    transition: transform .3s; }
    .out-of-stock-modal__close-button:hover {
      transform: translate(50%, -50%) rotate(180deg); }
  .out-of-stock-modal--after-open {
    top: 3rem; }
  .out-of-stock-modal--before-close {
    top: -100vh; }
