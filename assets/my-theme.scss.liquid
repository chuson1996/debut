/// Breakpoints --------
$sm:  576px;
$md:  768px;
$lg: 992px;
$wide:    1440px;
/// --------------------



$red: #e94a3d;
$white: #fff;

.hero__inner p {
  color: $white;
  font-weight: normal;
}

.hero__revolt-logo {
  width: 100%;
  margin-bottom: 1rem;
  @media (min-width: $md) {
    margin: auto;
    margin-bottom: 0;
    width: 63vw;
  }
}

.hero__body {
  padding-left: 22px;
  padding-right: 22px;
  @media (min-width: $sm) {
    padding-left: 10vw;
    padding-right: 10vw;
  }
  .hero__content-container {
    @media (min-width: $sm) {
      display: flex;
      justify-content: flex-end;

      .hero__content {
        display: flex;
        flex-direction: column;
      }
    }
  }
}

.hero__featured_product_image {
  width: 100%;
  transform: scale(2) translate(25%, -15%);
  @media (min-width: $sm) {
    max-width: 500px;
    transform: scale(1.3) translate(0, -8%);
  }
}

.pre-order-cta {
  width: 8rem;
  font-size: 1rem;
  @media (min-width: $sm) {
    width: 13rem;
    font-size: 1.7rem;
  }

  border-radius: 2.5rem;

  text-align: center;
  background-color: $red;
  padding: 0.2rem;
  color: $white;
  font-weight: 700;
  display: inline-block;

  .pre-order-cta__line1 {
    font-size: 1em;
    line-height: 0.8em;
  }

  .pre-order-cta__line2 {
    font-size: 2em;
    line-height: 1em;
  }

  &:focus {
    outline: none;
  }
  &:hover {
    text-decoration: none;
    color: $white;
  }
}
